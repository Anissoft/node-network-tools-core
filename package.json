  "typings": "index.d.ts",
  "scripts": {
    "lint": "eslint --fix ./src/index.ts",
    "clear": "rimraf ./dist",
    "prebuild": "npm run clear",
    "build": "tsc ./src/index.ts --module commonjs && rollup -c rollup.config.ts",
    "commit": "git-cz",
    "precommit": "lint-staged"
